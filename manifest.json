{
  "manifest_version": 3,
  "name": "Open Time Zone",
  "version": "1.0.0",
  "description": "Multiple time zones tracker.",
  "permissions": ["storage"],
  "icons": {
    "16": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}

